<div class="container mx-auto px-4 py-4 sm:py-8">
    <div class="mb-6 sm:mb-8 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
        <div>
            <h1 class="text-3xl sm:text-4xl font-bold mb-2">Projetos</h1>
            <p class="text-gray-400 text-sm sm:text-base">Selecione um projeto para acompanhar o desenvolvimento</p>
        </div>
        <a href="/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition-colors text-center sm:w-auto">
            Sair
        </a>
    </div>

    {{#if projects}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#each projects}}
                <a href="/projects/{{id}}" class="block bg-gray-800 rounded-lg p-6 hover:bg-gray-700 transition-colors border border-gray-700">
                    <h2 class="text-2xl font-semibold mb-2">{{name}}</h2>
                    {{#if description}}
                        <p class="text-gray-400 mb-4 text-sm">{{description}}</p>
                    {{/if}}
                    
                    <div class="mb-2">
                        <div class="flex justify-between text-sm mb-1">
                            <span>Progresso Geral</span>
                            <span>{{progress}}%</span>
                        </div>
                        <div class="w-full bg-gray-700 rounded-full h-2">
                            <div class="bg-blue-600 h-2 rounded-full" style="width: {{progress}}%"></div>
                        </div>
                    </div>

                    <div class="mt-4 text-sm text-gray-400">
                        <p>{{stages.length}} {{#if (eq stages.length 1)}}etapa{{else}}etapas{{/if}}</p>
                    </div>
                </a>
            {{/each}}
        </div>
    {{else}}
        <div class="text-center py-12">
            <p class="text-gray-400 text-lg">Nenhum projeto cadastrado ainda.</p>
        </div>
    {{/if}}
</div>

