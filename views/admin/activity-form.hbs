<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-8">
        <a href="/admin/projects/{{projectId}}/stages/{{stage.id}}/activities" class="text-blue-400 hover:text-blue-300 mb-4 inline-block">← Voltar</a>
        <h1 class="text-4xl font-bold mb-2">{{#if activity}}Editar{{else}}Nova{{/if}} Atividade</h1>
        <p class="text-gray-400">Etapa: {{stage.name}}</p>
    </div>

    {{#if error}}
        <div class="bg-red-900 border border-red-700 text-red-200 px-4 py-3 rounded mb-4">
            {{error}}
        </div>
    {{/if}}

    <form action="/admin/projects/{{projectId}}/stages/{{stage.id}}/activities{{#if activity}}/{{activity.id}}{{/if}}" method="POST" class="bg-gray-800 rounded-lg p-6 border border-gray-700">
        <div class="mb-4">
            <label for="name" class="block text-sm font-medium mb-2">Nome da Atividade *</label>
            <input type="text" 
                   id="name" 
                   name="name" 
                   value="{{activity.name}}"
                   required
                   class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white">
        </div>

        <div class="mb-6">
            <label for="description" class="block text-sm font-medium mb-2">Descrição</label>
            <textarea id="description" 
                      name="description" 
                      rows="4"
                      class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white">{{activity.description}}</textarea>
        </div>

        {{#if activity}}
            <div class="mb-6">
                <label class="flex items-center">
                    <input type="checkbox" 
                           name="completed" 
                           {{#if activity.completed}}checked{{/if}}
                           class="w-5 h-5 rounded border-gray-600 bg-gray-700 text-blue-600 focus:ring-blue-500 focus:ring-2">
                    <span class="ml-2 text-sm">Concluída</span>
                </label>
            </div>
        {{/if}}

        <div class="flex gap-4">
            <button type="submit" 
                    class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                {{#if activity}}Atualizar{{else}}Criar{{/if}}
            </button>
            <a href="/admin/projects/{{projectId}}/stages/{{stage.id}}/activities" 
               class="bg-gray-700 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                Cancelar
            </a>
        </div>
    </form>
</div>

