<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <a href="/admin/projects/{{projectId}}/stages" class="text-blue-400 hover:text-blue-300 mb-4 inline-block">‚Üê Voltar para etapas</a>
        <h1 class="text-4xl font-bold mb-2">{{stage.name}}</h1>
        <p class="text-gray-400">Gerenciar Atividades</p>
    </div>

    <div class="mb-6">
        <a href="/admin/projects/{{projectId}}/stages/{{stage.id}}/activities/new" 
           class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors inline-block">
            + Nova Atividade
        </a>
    </div>

    {{#if stage.activities}}
        <div class="space-y-3">
            {{#each stage.activities}}
                <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 mr-4 mt-1">
                            <input type="checkbox" 
                                   {{#if completed}}checked{{/if}} 
                                   data-activity-id="{{id}}"
                                   class="activity-checkbox w-5 h-5 rounded border-gray-600 bg-gray-700 text-blue-600 focus:ring-blue-500 focus:ring-2 cursor-pointer">
                        </div>
                        <div class="flex-1">
                            <label class="block text-sm font-medium {{#if completed}}line-through text-gray-500{{else}}text-gray-200{{/if}}">
                                {{name}}
                            </label>
                            {{#if description}}
                                <p class="text-xs text-gray-500 mt-1">{{description}}</p>
                            {{/if}}
                        </div>
                        <div class="flex gap-2">
                            <a href="/admin/projects/{{../projectId}}/stages/{{../stage.id}}/activities/{{id}}/edit" 
                               class="bg-gray-700 hover:bg-gray-600 px-3 py-1 rounded-lg transition-colors text-sm">
                                Editar
                            </a>
                            <form action="/admin/projects/{{../projectId}}/stages/{{../stage.id}}/activities/{{id}}/delete" method="POST" class="inline">
                                <button type="submit" 
                                        onclick="return confirm('Tem certeza que deseja deletar esta atividade?')"
                                        class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded-lg transition-colors text-sm">
                                    Deletar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="text-center py-12 bg-gray-800 rounded-lg border border-gray-700">
            <p class="text-gray-400 text-lg mb-4">Nenhuma atividade cadastrada ainda.</p>
            <a href="/admin/projects/{{projectId}}/stages/{{stage.id}}/activities/new" 
               class="inline-block bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg transition-colors">
                Criar Primeira Atividade
            </a>
        </div>
    {{/if}}
</div>

<script>
    document.querySelectorAll('.activity-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', async function() {
            const activityId = this.dataset.activityId;
            try {
                const response = await fetch(`/admin/activities/${activityId}/toggle`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    const data = await response.json();
                    const label = this.closest('.bg-gray-800').querySelector('label');
                    if (data.completed) {
                        label.classList.add('line-through', 'text-gray-500');
                        label.classList.remove('text-gray-200');
                    } else {
                        label.classList.remove('line-through', 'text-gray-500');
                        label.classList.add('text-gray-200');
                    }
                } else {
                    this.checked = !this.checked;
                    alert('Erro ao atualizar atividade');
                }
            } catch (error) {
                this.checked = !this.checked;
                alert('Erro ao atualizar atividade');
            }
        });
    });
</script>

