<div class="container mx-auto px-4 py-4 sm:py-8">
    <div class="mb-6 sm:mb-8">
        <a href="/admin/projects/{{projectId}}/stages" class="text-blue-400 hover:text-blue-300 mb-4 inline-block text-sm sm:text-base">← Voltar para etapas</a>
        <h1 class="text-2xl sm:text-4xl font-bold mb-2">{{stage.name}}</h1>
        <p class="text-gray-400 text-sm sm:text-base">Gerenciar Atividades</p>
    </div>

    <div class="mb-6">
        <a href="/admin/projects/{{projectId}}/stages/{{stage.id}}/activities/new" 
           class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors inline-block">
            + Nova Atividade
        </a>
    </div>

    {{#if stage.activities}}
        <div id="activities-list" class="space-y-3">
            {{#each stage.activities}}
                <div class="activity-item bg-gray-800 rounded-lg p-4 border border-gray-700 cursor-move hover:border-blue-500 transition-colors" data-activity-id="{{id}}">
                    <div class="flex flex-col sm:flex-row sm:items-start gap-3">
                        <div class="flex items-start gap-3 flex-1">
                            <div class="drag-handle flex-shrink-0 mt-1 cursor-grab active:cursor-grabbing">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"></path>
                                </svg>
                            </div>
                            <div class="flex-shrink-0 mt-1">
                                <input type="checkbox" 
                                       {{#if completed}}checked{{/if}} 
                                       data-activity-id="{{id}}"
                                       class="activity-checkbox w-5 h-5 rounded border-gray-600 bg-gray-700 text-blue-600 focus:ring-blue-500 focus:ring-2 cursor-pointer">
                            </div>
                            <div class="flex-1 min-w-0">
                                <label class="block text-sm font-medium {{#if completed}}line-through text-gray-500{{else}}text-gray-200{{/if}}">
                                    {{name}}
                                </label>
                                {{#if description}}
                                    <p class="text-xs text-gray-500 mt-1">{{description}}</p>
                                {{/if}}
                            </div>
                        </div>
                        <div class="flex gap-2 sm:flex-shrink-0">
                            <a href="/admin/projects/{{../projectId}}/stages/{{../stage.id}}/activities/{{id}}/edit" 
                               class="bg-gray-700 hover:bg-gray-600 px-3 py-1.5 rounded-lg transition-colors text-sm text-center flex-1 sm:flex-initial">
                                Editar
                            </a>
                            <form action="/admin/projects/{{../projectId}}/stages/{{../stage.id}}/activities/{{id}}/delete" method="POST" class="flex-1 sm:flex-initial delete-form">
                                <button type="submit" 
                                        class="w-full bg-red-600 hover:bg-red-700 px-3 py-1.5 rounded-lg transition-colors text-sm">
                                    Deletar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="text-center py-12 bg-gray-800 rounded-lg border border-gray-700">
            <p class="text-gray-400 text-lg mb-4">Nenhuma atividade cadastrada ainda.</p>
            <a href="/admin/projects/{{projectId}}/stages/{{stage.id}}/activities/new" 
               class="inline-block bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg transition-colors">
                Criar Primeira Atividade
            </a>
        </div>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
<script>
    // Drag and Drop para reordenar atividades
    const activitiesList = document.getElementById('activities-list');
    if (activitiesList) {
        const sortable = Sortable.create(activitiesList, {
            animation: 150,
            handle: '.drag-handle',
            ghostClass: 'opacity-50',
            onEnd: async function(evt) {
                const activityItems = Array.from(activitiesList.querySelectorAll('.activity-item'));
                const activityIds = activityItems.map(item => item.dataset.activityId);
                
                try {
                    const response = await fetch(`/admin/stages/{{stage.id}}/activities/reorder`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ activityIds })
                    });
                    
                    if (!response.ok) {
                        const error = await response.json();
                        throw new Error(error.error || 'Erro ao atualizar ordem');
                    }
                    
                    // Feedback visual de sucesso
                    const notification = document.createElement('div');
                    notification.className = 'fixed top-4 right-4 bg-green-600 text-white px-4 py-2 rounded-lg shadow-lg z-50';
                    notification.textContent = 'Ordem atualizada com sucesso!';
                    document.body.appendChild(notification);
                    setTimeout(() => notification.remove(), 2000);
                } catch (error) {
                    console.error('Erro ao atualizar ordem:', error);
                    alert('Erro ao atualizar ordem das atividades. Recarregando página...');
                    window.location.reload();
                }
            }
        });
    }

    // Toggle de atividades
    document.querySelectorAll('.activity-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', async function() {
            const activityId = this.dataset.activityId;
            try {
                const response = await fetch(`/admin/activities/${activityId}/toggle`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    const data = await response.json();
                    const label = this.closest('.bg-gray-800').querySelector('label');
                    if (data.completed) {
                        label.classList.add('line-through', 'text-gray-500');
                        label.classList.remove('text-gray-200');
                    } else {
                        label.classList.remove('line-through', 'text-gray-500');
                        label.classList.add('text-gray-200');
                    }
                } else {
                    this.checked = !this.checked;
                    alert('Erro ao atualizar atividade');
                }
            } catch (error) {
                this.checked = !this.checked;
                alert('Erro ao atualizar atividade');
            }
        });
    });
</script>

