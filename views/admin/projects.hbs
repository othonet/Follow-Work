<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold mb-2">Projetos</h1>
            <p class="text-gray-400">Gerencie seus projetos</p>
        </div>
        <div class="flex gap-4">
            <a href="/admin/clients" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition-colors">
                Clientes
            </a>
            <a href="/admin/admins" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition-colors">
                Admins
            </a>
            <a href="/" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition-colors" target="_blank">
                Ver PÃºblico
            </a>
            <a href="/admin/projects/new" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors">
                + Novo Projeto
            </a>
            <a href="/admin/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition-colors">
                Sair
            </a>
        </div>
    </div>

    {{#if projects}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#each projects}}
                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
                    <h2 class="text-2xl font-semibold mb-2">{{name}}</h2>
                    {{#if description}}
                        <p class="text-gray-400 mb-4 text-sm">{{description}}</p>
                    {{/if}}
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-400 mb-2">{{stages.length}} {{#if (eq stages.length 1)}}etapa{{else}}etapas{{/if}}</p>
                    </div>

                    <div class="flex gap-2">
                        <a href="/admin/projects/{{id}}/stages" 
                           class="flex-1 bg-blue-600 hover:bg-blue-700 text-center px-4 py-2 rounded-lg transition-colors text-sm">
                            Gerenciar
                        </a>
                        <a href="/admin/projects/{{id}}/edit" 
                           class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition-colors text-sm">
                            Editar
                        </a>
                        <form action="/admin/projects/{{id}}/delete" method="POST" class="inline">
                            <button type="submit" 
                                    onclick="return confirm('Tem certeza que deseja deletar este projeto?')"
                                    class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition-colors text-sm">
                                Deletar
                            </button>
                        </form>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="text-center py-12 bg-gray-800 rounded-lg border border-gray-700">
            <p class="text-gray-400 text-lg mb-4">Nenhum projeto cadastrado ainda.</p>
            <a href="/admin/projects/new" class="inline-block bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg transition-colors">
                Criar Primeiro Projeto
            </a>
        </div>
    {{/if}}
</div>

