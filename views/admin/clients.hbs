<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold mb-2">Clientes</h1>
            <p class="text-gray-400">Gerencie os clientes do sistema</p>
        </div>
        <div class="flex gap-4">
            <a href="/admin/projects" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition-colors">
                Projetos
            </a>
            <a href="/admin/clients/new" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors">
                + Novo Cliente
            </a>
            <a href="/admin/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition-colors">
                Sair
            </a>
        </div>
    </div>

    {{#if clients}}
        <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Nome</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Projetos com Acesso</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Data de Cadastro</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">Ações</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    {{#each clients}}
                        <tr class="hover:bg-gray-750">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">{{name}}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">{{email}}</td>
                            <td class="px-6 py-4 text-sm text-gray-300">
                                {{#if projects}}
                                    <div class="flex flex-wrap gap-1">
                                        {{#each projects}}
                                            <span class="bg-blue-600/20 text-blue-300 px-2 py-1 rounded text-xs">{{project.name}}</span>
                                        {{/each}}
                                    </div>
                                {{else}}
                                    <span class="text-gray-500 text-xs">Nenhum projeto</span>
                                {{/if}}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">{{formatDate createdAt}}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end gap-2">
                                    <a href="/admin/clients/{{id}}/edit" 
                                       class="bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded transition-colors text-sm">
                                        Editar
                                    </a>
                                    <form action="/admin/clients/{{id}}/delete" method="POST" class="inline">
                                        <button type="submit" 
                                                onclick="return confirm('Tem certeza que deseja deletar este cliente?')"
                                                class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded transition-colors text-sm">
                                            Deletar
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <div class="text-center py-12 bg-gray-800 rounded-lg border border-gray-700">
            <p class="text-gray-400 text-lg mb-4">Nenhum cliente cadastrado ainda.</p>
            <a href="/admin/clients/new" class="inline-block bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg transition-colors">
                Cadastrar Primeiro Cliente
            </a>
        </div>
    {{/if}}
</div>

