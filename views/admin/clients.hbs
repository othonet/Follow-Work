<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-4">
            <div>
                <h1 class="text-3xl sm:text-4xl font-bold mb-2">Clientes</h1>
                <p class="text-gray-400 text-sm sm:text-base">Gerencie os clientes do sistema</p>
            </div>
            <a href="/admin/clients/new" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors text-center sm:w-auto">
                + Novo Cliente
            </a>
        </div>
        <div class="flex flex-wrap gap-2">
            <a href="/admin/projects" class="bg-gray-700 hover:bg-gray-600 px-3 py-2 rounded-lg transition-colors text-sm">
                Projetos
            </a>
            <a href="/admin/admins" class="bg-gray-700 hover:bg-gray-600 px-3 py-2 rounded-lg transition-colors text-sm">
                Admins
            </a>
            <a href="/admin/logout" class="bg-red-600 hover:bg-red-700 px-3 py-2 rounded-lg transition-colors text-sm">
                Sair
            </a>
        </div>
    </div>

    {{#if clients}}
        <!-- Desktop Table View -->
        <div class="hidden md:block bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Nome</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Nome de usuário</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Email</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Projetos</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Data</th>
                            <th class="px-4 lg:px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">Ações</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        {{#each clients}}
                            <tr class="hover:bg-gray-750">
                                <td class="px-4 lg:px-6 py-4 text-sm font-medium text-white">{{name}}</td>
                                <td class="px-4 lg:px-6 py-4 text-sm text-gray-300">{{#if username}}{{username}}{{else}}<span class="text-gray-500">-</span>{{/if}}</td>
                                <td class="px-4 lg:px-6 py-4 text-sm text-gray-300">{{#if email}}{{email}}{{else}}<span class="text-gray-500">-</span>{{/if}}</td>
                                <td class="px-4 lg:px-6 py-4 text-sm text-gray-300">
                                    {{#if projects}}
                                        <div class="flex flex-wrap gap-1">
                                            {{#each projects}}
                                                <span class="bg-blue-600/20 text-blue-300 px-2 py-1 rounded text-xs">{{project.name}}</span>
                                            {{/each}}
                                        </div>
                                    {{else}}
                                        <span class="text-gray-500 text-xs">Nenhum</span>
                                    {{/if}}
                                </td>
                                <td class="px-4 lg:px-6 py-4 text-sm text-gray-400">{{formatDate createdAt}}</td>
                                <td class="px-4 lg:px-6 py-4 text-right text-sm font-medium">
                                    <div class="flex justify-end gap-2">
                                        <a href="/admin/clients/{{id}}/edit" 
                                           class="bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded transition-colors text-sm">
                                            Editar
                                        </a>
                                        <form action="/admin/clients/{{id}}/delete" method="POST" class="inline delete-form">
                                            <button type="submit" 
                                                    class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded transition-colors text-sm">
                                                Deletar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobile Card View -->
        <div class="md:hidden space-y-4">
            {{#each clients}}
                <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
                    <div class="mb-3">
                        <h3 class="text-lg font-semibold text-white mb-1">{{name}}</h3>
                        <p class="text-sm text-gray-300">Usuário: {{#if username}}{{username}}{{else}}<span class="text-gray-500">-</span>{{/if}}</p>
                        <p class="text-sm text-gray-300">{{#if email}}{{email}}{{else}}<span class="text-gray-500">-</span>{{/if}}</p>
                        <p class="text-xs text-gray-400 mt-1">Cadastrado em {{formatDate createdAt}}</p>
                    </div>
                    {{#if projects}}
                        <div class="mb-3">
                            <p class="text-xs text-gray-400 mb-1">Projetos:</p>
                            <div class="flex flex-wrap gap-1">
                                {{#each projects}}
                                    <span class="bg-blue-600/20 text-blue-300 px-2 py-1 rounded text-xs">{{project.name}}</span>
                                {{/each}}
                            </div>
                        </div>
                    {{/if}}
                    <div class="flex gap-2 mt-4">
                        <a href="/admin/clients/{{id}}/edit" 
                           class="flex-1 bg-blue-600 hover:bg-blue-700 text-center px-3 py-2 rounded transition-colors text-sm">
                            Editar
                        </a>
                        <form action="/admin/clients/{{id}}/delete" method="POST" class="flex-1 delete-form">
                            <button type="submit" 
                                    class="w-full bg-red-600 hover:bg-red-700 px-3 py-2 rounded transition-colors text-sm">
                                Deletar
                            </button>
                        </form>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="text-center py-12 bg-gray-800 rounded-lg border border-gray-700">
            <p class="text-gray-400 text-lg mb-4">Nenhum cliente cadastrado ainda.</p>
            <a href="/admin/clients/new" class="inline-block bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg transition-colors">
                Cadastrar Primeiro Cliente
            </a>
        </div>
    {{/if}}
</div>

